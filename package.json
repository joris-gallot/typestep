{
  "name": "typestep",
  "type": "module",
  "version": "0.5.2",
  "packageManager": "pnpm@10.26.0",
  "description": "Simplifies JavaScript to TypeScript migration with incremental changes",
  "author": "Joris Gallot",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joris-gallot/typestep.git"
  },
  "keywords": [
    "tsc",
    "typescript",
    "types",
    "migration",
    "incremental-migration"
  ],
  "types": "dist/types.d.ts",
  "bin": {
    "typestep": "dist/cli.mjs"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": "24.12.0"
  },
  "scripts": {
    "playground": "jiti playground.ts",
    "cli": "jiti src/cli.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "build": "unbuild",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "citty": "^0.1.6",
    "consola": "^3.4.2",
    "jiti": "^2.6.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.7.1",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "unbuild": "^3.6.1",
    "vitest": "^4.0.16"
  }
}
